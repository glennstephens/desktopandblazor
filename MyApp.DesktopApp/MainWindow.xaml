<Window x:Class="MyApp.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp.DesktopApp"
        mc:Ignorable="d"
        Title="Increment Counter Page" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="491*"/>
            <ColumnDefinition Width="229*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="261*"/>
        </Grid.RowDefinitions>
        <Label Content="Current Count:" HorizontalAlignment="Left" Margin="38,31,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="counterLabel" Content="0" HorizontalAlignment="Left" Margin="128,31,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="mainButton" Content="Increment" HorizontalAlignment="Left" Margin="38,83,0,0" VerticalAlignment="Top" Width="248" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
